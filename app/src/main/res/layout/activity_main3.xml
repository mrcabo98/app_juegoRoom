<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="2 + 2 ="
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_currentQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_pregunta"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-35dp"
        android:text="1 de 5"
        android:textSize="17sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editText_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_currentQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:gravity="center"
        android:hint="@string/escriu_la_resposta_i_polsa_enter"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_remainSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:text="Seconds remaining : 8"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_totalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="PUNTUACIÃ“ FINAL : 0"
        android:textSize="27sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonTornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_totalScore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:text="@string/tornar"
        android:visibility="invisible" />


</RelativeLayout>